<div class="container">
	<div class="row">
		<div class="col-md-offset-2 col-md-8 col-lg-offset-3 col-lg-6">
    	 <div class="well profile">
            <div class="col-sm-12">
                <div class="col-xs-12 col-sm-8">
                    <h2><%= @user.first_name %> <%= @user.last_name %></h2>
                    <p><strong>About: </strong><%= @user.bio %> </p>
                    <p><strong>Gym: </strong><%= @user.gym %> </p>
                    <p><strong>Exercise: </strong><%= @user.exercise_frequency %></p>
                    <p><strong>When: </strong><%= @user.exercise_tod %></p>
                    <p><strong>Type: </strong><%= @user.exercise_type %></p>
                    <p><strong>Preference:<br> </strong>
                    <p>
            
                    <%= image_tag "sprint.svg", :class => "exercise-icon icon-box"%>
                    <%= image_tag "table-tennis.svg", :class => "exercise-icon icon-box"%>
                    <%= image_tag "weightlifting.svg", :class => "exercise-icon icon-box"%>
                    <%= image_tag "bicycle.svg", :class => "exercise-icon icon-box"%>
                    </p>
                      
                    </p>
                </div>             
                <div class="col-xs-12 col-sm-4 text-center">
                   <br><figure>
                        <%= gravatar_tag @user.email, size:125, :html => { :class => "img-circle img-responsive" } %>
                        <figcaption class="ratings">
                        <br>
                            <p><strong>Activity:</strong>
                            <a href="#">
                                <span class="fa fa-star"></span>
                            </a>
                            <a href="#">
                                <span class="fa fa-star"></span>
                            </a>
                            <a href="#">
                                <span class="fa fa-star"></span>
                            </a>
                            <a href="#">
                                <span class="fa fa-star"></span>
                            </a>
                            <a href="#">
                                 <span class="fa fa-star-o"></span>
                            </a> 
                            </p>
                        </figcaption>
                    </figure>
                </div>
            </div>            
            <div class="col-xs-12 divider text-center">
                <div class="col-xs-12 col-sm-4 emphasis"> 
                    <h4><strong>Created</strong></h4>
                    <p><small><%= time_ago_in_words(@user.created_at) %> ago</small></p>
                    

                    

                </div>
                <div class="col-xs-12 col-sm-4 emphasis">
                    <h4><strong>Last Sign In</strong></h4>                    
                    <p><small><%= time_ago_in_words(@user.current_sign_in_at) %> ago</small></p>
                    
                </div>
                <div class="col-xs-12 col-sm-4 emphasis">
                    <h4><strong>Gyms</strong></h4>                    
                    <p><small>1</small></p>


                    <div class="btn-group dropup btn-block">
                      <button type="button" class="btn btn-primary"><span class="fa fa-gear"></span> Options </button>
                      <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                        <span class="caret"></span>
                        <span class="sr-only">Toggle Dropdown</span>
                      </button>

                      <ul class="dropdown-menu text-left" role="menu">
                      <% if current_user %>
                        <li><%= link_to '<span class="fa fa-list pull-right"></span> View Users'.html_safe, users_path %></li>
                        <li class="divider"></li>
                        <li><%= link_to '<span class="fa fa-user pull-right"></span> Edit Profile'.html_safe, edit_user_registration_path %></li>
                        
                      <% else %>

                        <li><a href="#"><span class="fa fa-envelope pull-right"></span> Send a message </a></li>
                        <li><a href="#"><span class="fa fa-list pull-right"></span> Add or remove  </a></li>
                        <li class="divider"></li>
                        <li><a href="#"><span class="fa fa-warning pull-right"></span>Report this user for spam</a></li>
                        <li class="divider"></li>
                        <li><a href="#" class="btn disabled" role="button"> Unfollow </a></li>

                        <% end %>
                      </ul>
                    </div>
                </div>
            </div>
    	 </div>                 
		</div>
	</div>
    <%= render "posts/form" %>
</div>



