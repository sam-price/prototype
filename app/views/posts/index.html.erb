<div class="col-md-4">
<h4>Horfield Leisure Centre</h4>
<img src="http://s0.geograph.org.uk/geophotos/02/08/28/2082855_0595a0be.jpg
" class="img-responsive" alt="Responsive image">
</div>


<div class="container">
	<ul class="timeline">

	<% @posts.reverse_each do |post| %>

	<% if cycle('odd','even') == 'odd' %>
		<li class="timeline-inverted">
		<div class="timeline-badge info"></div>
	<% else %>
		<li>
		<div class="timeline-badge danger"></div>
	<% end %>

		<div class="timeline-panel">
			<div class="timeline-heading">
				<h4 class="timeline-title"><%= post.user.first_name %></h4>
				<p><small><%=  time_ago_in_words(post.created_at)%> ago</small></p>
			</div>
			<div class="timeline-body">
				<p><%= post.content %></p>
				<p><%= link_to 'View Profile', user_path(post.user.id) %></p>
			</div>
		</div>
		</li>

	<% end %>

	</ul>
</div>
			
			
		
